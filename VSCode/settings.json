        "/^ls -lat .*\\*.*\\.png \\| (head|tail) -?\\d+$/": { 
            "approve": true, 
            "matchCommandLine": true 
        },
        "/^ls -lat .*\\* \\| (head|tail) -?\\d+$/": { 
            "approve": true, 
            "matchCommandLine": true 
        },
        "ls -lat debug_after_ok_press_*.png | head -5": { 
            "approve": true, 
            "matchCommandLine": true 
        },
        "/^ls -lat debug_after_ok_press_\\*\\.png \\| head -\\d+$/": { 
            "approve": true, 
            "matchCommandLine": true 
