            "approve": true, 
            "matchCommandLine": true,
            "timeout": 10000
        },
        
        // 複数grepの組み合わせ（どんなワードでも対応）
        "/^adb logcat.*\\| grep .* \\| grep .*$/": { 
            "approve": true, 
            "matchCommandLine": true 
